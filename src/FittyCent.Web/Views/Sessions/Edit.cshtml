@model FittyCent.Web.Models.SessionModel
@{
    ViewBag.Title = "Edit Session";
}

<div class="body-content">
    <h2>Create Session for @Model.TrainerClassTitle</h2>
    @using ( Html.BeginForm("Edit", "Sessions", FormMethod.Post, new { role = "form", @class = "form-horizontal" }) ) {
        @Html.HiddenFor(m => m.Id)
        @Html.EditorForModel()
        <div class="form-group">
            <div class="col-md-6 col-lg-offset-3 col-sm-8 col-xs-12">
                <input type="submit" value="Save" class="btn btn-sm btn-primary" />
            </div>
        </div>
    }
    <hr />
    <div>
        @Html.ActionLink("Cancel", "Details", "Sessions", new { id = Model.Id }, null)
    </div>
</div>