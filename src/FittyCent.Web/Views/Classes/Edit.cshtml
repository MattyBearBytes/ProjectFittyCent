@model FittyCent.Web.Models.TrainerClassModel
@{
    ViewBag.Title = "Edit Class";
}
@Html.Partial("_TrainerAccountNavMenu")
<div class="body-content">
    <div class="edit-container">

        <h2>Edit Class</h2>
        @using (Html.BeginForm("Edit", "Classes", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.EditorForModel()
            <input type="submit" value="Save" class="btn btn-sm btn-primary" />
        }
        <hr />
        <div>
            @Html.ActionLink("Cancel", "Details", "Classes", new { Model.Id }, null)
        </div>
    </div>
</div>