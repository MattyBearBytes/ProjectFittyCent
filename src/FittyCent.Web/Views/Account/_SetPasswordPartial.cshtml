@model FittyCent.Web.Models.ChangePassword

<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>

@using (Html.BeginForm("ManageAccess", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Create Local Login</h4>
    <hr />
    @Html.ValidationSummary()
    @Html.FormGroupPasswordFor(m => m.NewPassword)
    @Html.FormGroupPasswordFor(m => m.ConfirmPassword)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Set password" class="btn btn-default" />
        </div>
    </div>
}
