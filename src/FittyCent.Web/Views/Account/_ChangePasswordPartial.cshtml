@model FittyCent.Web.Models.ManageUserViewModel

@using ( Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }) ) {
    <h4>Change Password</h4>
    @Html.ValidationSummary()
    @Html.FormGroupTextBoxFor(m => m.OldPassword)
    @Html.FormGroupTextBoxFor(m => m.NewPassword)
    @Html.FormGroupTextBoxFor(m => m.ConfirmPassword)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change password" class="btn btn-default" />
        </div>
    </div>
}
