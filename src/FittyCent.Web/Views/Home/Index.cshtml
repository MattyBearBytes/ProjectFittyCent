@using FittyCent
@{
    ViewBag.Title = "Open Air Fitness";
}
<div class="splash-container">
    <form class="form-inline search-form" role="form">
        <div class="form-group">
            <label class="sr-only">Where do you want to train?</label>
            @*<input type="text" class="form-control location-input" placeholder="Where do you want to train?">*@
            <input id="Address" placeholder="Where do you want to train?" onfocus="geolocate()" class="form-control location-input" type="text" />

            @Html.DropDownList("ClassType", new SelectList(Constants.ClassTypes), "Type of Class", new { @class = "form-control" })

            <select class="form-control">
                <option>AM</option>
                <option>PM</option>
            </select>
            <button type="submit" class="btn btn-default">Search</button>
        </div>
    </form>
    <div class="tagline">
        <span>All outdoor classes in one place.</span>
    </div>
</div>
<div class="row-fluid">
    <div class="col-md-4">
        <h2>Find a class</h2>
        <p>
            Look for fitness classes around you. Join a group class or find a personal one-on-one session.
        </p>
    </div>
    <div class="col-md-4">
        <h2>Peace of mind</h2>
        <p>Find personal trainers who are accredited and qualified. View classes rated by other users.</p>
    </div>
    <div class="col-md-4">
        <h2>List classes for free!</h2>
        <p>Are you a personal trainer? Advertise and list your classes for free on Open Air Fitness. Get more new clients today!</p>
    </div>
</div>

@section scripts
{
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places"></script>
    <script src="~/Scripts/address-autocomplete.js"></script>
}
